<!DOCTYPE html>
<html lang="en">
<style>
  table, th, td {
    border:1px solid black;
  }
</style>

<%- include('../partials/head'); %>

<body class="container">
<body style="background-color: #DBF2FF;"

<%- include('../partials/header'); %>

<style>
    .btn {
      background-color: DodgerBlue;
      border: none;
      color: white;
      padding: 12px 16px;
      font-size: 16px;
      cursor: pointer;
    }
    
    /* Darker background on mouse-over */
    .btn:hover {
      background-color: RoyalBlue;
    }
    </style>

<main> 
    <br>
    <div class="jumbotron" style="background-color:#A4BCE0">
      <table style="width: 100%;">
        <h6><center><strong>AIRLINE CLIENT INFORMATION</strong</center></h6>
          <tr>
              <th>Client ID</th>
              <th>Contact First Name</th>
              <th>Contact Last Name</th>
              <th>Email</th>
              <th>Phone Number</th>
              <th>Airline Name</th>
              <th>Address</th>
              <th>Zip Code</th>
              <th>State</th>
              <th>Country</th>
              <th>Region</th>
              <th>Status</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Subscription Amount</th>
          </tr>
          <% report1.forEach(function(report1) { %>
          <tr>
              <td><%= report1.client_id %></td>
              <td><%= report1.contact_first_name %></td>
              <td><%= report1.contact_last_name %></td>
              <td><%= report1.contact_email %></td> 
              <td><%= report1.contact_phone_number %></td> 
              <td><%= report1.airline_name %></td> 
              <td><%= report1.address %></td> 
              <td><%= report1.zip_code %></td>
              <td><%= report1.state_providence_name %></td>
              <td><%= report1.country_name %></td>
              <td><%= report1.region_name %></td>
              <td><%= report1.status_name %></td> 
              <td><%= report1.start_date %></td>
              <td><%= report1.end_date %></td>
              <td><%= report1.subscription_amount %></td>
          </tr>
          
          <% }); %>
      </table>
  </div>
    
<br>
<ul>
    <a href="/reports"><button class="btn"><i class="fa fa-home"></i> Back</button></a>
</ul>
</main>


</body>
</body>
</html>