<!DOCTYPE html>
<html lang="en">
<style>
  table, th, td {
    border:1px solid black;
  }
</style>

<%- include('../partials/head'); %>

<body class="container">
<body style="background-color: #E1AEAE;"

<%- include('../partials/header'); %>

<style>
    .btn {
      background-color: DodgerBlue;
      border: none;
      color: white;
      padding: 12px 16px;
      font-size: 16px;
      cursor: pointer;
    }
    
    /* Darker background on mouse-over */
    .btn:hover {
      background-color: RoyalBlue;
    }
    </style>

<main> 
    <br>
    <div class="jumbotron" style="background-color:rgb(127, 191, 221)">
      <h6><center><strong>CLIENTS PER REGION</strong></center></h6>
      <table style="width: 100%;">
          <tr>
              <th>Africa</th>
              <th>Asia</th>
              <th>Europe</th>
              <th>Middle East</th>
              <th>Zip Code</th>
              <th>Email</th>
              <th>Phone Number</th>
          </tr>
          <% report3.forEach(function(report3) { %>
          <tr>
              <td><%= report3.airline_name %></td>
              <td><%= report3.contact_first_name %></td>
              <td><%= report3.contact_last_name %></td> 
              <td><%= report3.address %></td> 
              <td><%= report3.zip_code %></td>
              <td><%= report3.contact_email %></td> 
              <td><%= report3.contact_phone_number %></td> 
              <td><%= report3.report3_status_id %></td> 
          </tr>
          
          <% }); %>
      </table>
  </div>
    
<br>
<ul>
  <a href="/reports"><button class="btn"><i class="fa fa-home"></i> Back</button></a>
</ul>
</main>


</body>
</body>
</html>