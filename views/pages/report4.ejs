<!DOCTYPE html>
<html lang="en">
<style>
  table, th, td {
    border:1px solid black;
  }
</style>

<%- include('../partials/head'); %>

<body class="container">
<body style="background-color: #DBF2FF;"

<%- include('../partials/header'); %>

<style>
    .btn {
      background-color: DodgerBlue;
      border: none;
      color: white;
      padding: 12px 16px;
      font-size: 16px;
      cursor: pointer;
    }
    
    /* Darker background on mouse-over */
    .btn:hover {
      background-color: RoyalBlue;
    }
    </style>

<main> 
    <br>
    <div class="jumbotron" style="background-color:#A4BCE0">
      <h6><center><strong>PROSPECTS PER REGION</strong></center></h6>
        <table style="width: 100%;">
          <tr>
              <th>Africa</th>
              <th>Asia</th>
              <th>Europe</th>
              <th>Middle East</th>
              <th>North America</th>
              <th>South America</th>
              <th>Oceania</th>
          </tr>
          <% report4.forEach(function(report4) { %>
          <tr>
            <td><%= report4.Africa %></td>
            <td><%= report4.Asia %></td>
            <td><%= report4.Europe %></td> 
            <td><%= report4.Middle_East %></td> 
            <td><%= report4.North_America %></td>
            <td><%= report4.South_America %></td> 
            <td><%= report4.Oceania %></td> 
          </tr>
          
          <% }); %>
      </table>
  </div>
    
<br>
<ul>
  <a href="/reports"><button class="btn"><i class="fa fa-home"></i> Back</button></a>
</ul>
</main>


</body>
</body>
</html>