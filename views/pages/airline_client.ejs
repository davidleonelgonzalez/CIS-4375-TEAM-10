<!DOCTYPE html>
<html lang="en">
<body class="container">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<style>
    .btn {
      background-color: DodgerBlue;
      border: none;
      color: white;
      padding: 12px 16px;
      font-size: 16px;
      cursor: pointer;
    }
    
    /* Darker background on mouse-over */
    .btn:hover {
      background-color: RoyalBlue;
    }
    </style>

<main> 
    <div class="jumbotron" style="background-color:rgb(127, 191, 221)">
        <h6><center>AIRLINE CLIENT INFORMATION</center></h6>
        <% client.forEach(function(client) { %>
        <li>
            Airline Clients:  <strong> <%= client.airline_name %> </strong> <%= client.address %> <%= client.zip_code %> <%= client.state_id %> <%= client.country_id %> <%= client.region_id %> <%= client.client_status_id %>
        </li>

        <% }); %>
    </div>

    <div class="jumbotron">
        <form action="/addclient" method="post">
            <center>
                <h2>Add Airline Client</h2>
                <strong>Input Fields To Add Airline Client Below:</strong>
                <div class="form-group">
                    <input type="text" id="airline_name" name="airline_name" class="form-control" placeholder="airline_name" required autofocus>
                </div>
                <div class="form-group">
                    <input type="text" id="address" name="address" class="form-control" placeholder="address" required autofocus>
                </div>
                <div class="form-group">
                    <input type="text" id="zip_code" name="zip_code" class="form-control" placeholder="zip_code" required autofocus>
                </div>
                <div class="form-group">
                    <input type="text" id="state_id" name="state_id" class="form-control" placeholder="state_id" required autofocus>
                </div>
                <div class="form-group">
                    <input type="text" id="country_id" name="country_id" class="form-control" placeholder="country_id" required autofocus>
                </div>     
                <div class="form-group">
                    <input type="text" id="region_id" name="region_id" class="form-control" placeholder="region_id" required autofocus>
                </div>   
                <div class="form-group">
                    <input type="text" id="client_status_id" name="client_status_id" class="form-control" placeholder="client_status_id" required autofocus>
                </div>           
                <input class="btn btn-lg btn-primary btn-block" type="submit" style="background-color:rgb(29, 184, 101)">
            </center>
        </form>
    </div>

<ul>
    <a href="/"><button class="btn"><i class="fa fa-home"></i> Home</button></a>

</main>



</body>
</html>