<!DOCTYPE html>
<html lang="en">
<style>
  table, th, td {
    border:1px solid black;
  }
</style>

<%- include('../partials/head'); %>

<body class="container">
<body style="background-color: #DBF2FF;"

<%- include('../partials/header'); %>

<style>
    .btn {
      background-color: DodgerBlue;
      border: none;
      color: white;
      padding: 12px 16px;
      font-size: 16px;
      cursor: pointer;
    }
    
    /* Darker background on mouse-over */
    .btn:hover {
      background-color: RoyalBlue;
    }
    </style>

<main> 
    <br>
    <div class="jumbotron" style="background-color:#A4BCE0">
      <h6><center><strong>CLIENT AND PRODUCT</strong></center></h6>
        <table style="width: 100%;">
          <tr>
              <th>Airline</th>
              <th>Cateogry</th>
              <th>Client ID</th>
              <th>Employee ID</th>
              <th>Last Name</th>
              <th>Product Description</th>
              <th>Product Name</th>
              <th>Product SKU</th>
             
          </tr>
          <% report5.forEach(function(report5) { %>
          <tr>
              <td><%= report5.airline_name %></td>
              <td><%= report5.category %></td>
              <td><%= report5.client_id %></td>
              <td><%= report5.first_name %></td>
              <td><%= report5.last_name %></td> 
              <td><%= report5.product_description%></td> 
              <td><%= report5.product_name %></td>
              <td><%= report5.product_sku %></td> 
              
          </tr>
          
          <% }); %>
      </table>
  </div>
    
<br>
<ul>
  <a href="/reports"><button class="btn"><i class="fa fa-home"></i> Back</button></a>
</ul>
</main>


</body>
</body>
</html>