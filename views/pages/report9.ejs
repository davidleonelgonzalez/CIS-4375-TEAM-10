<!DOCTYPE html>
<html lang="en">
<style>
  table, th, td {
    border:1px solid black;
  }
</style>

<%- include('../partials/head'); %>

<body class="container">
<body style="background-color: #DBF2FF;"

<%- include('../partials/header'); %>

<style>
    .btn {
      background-color: DodgerBlue;
      border: none;
      color: white;
      padding: 12px 16px;
      font-size: 16px;
      cursor: pointer;
    }
    
    /* Darker background on mouse-over */
    .btn:hover {
      background-color: RoyalBlue;
    }
    </style>

<main> 
    <br>
    <div class="jumbotron" style="background-color:#A4BCE0">
      <h6><center><strong>NUMBER OF SALES BY EACH EMPLOYEE FROM SALES DEPARTMENT</strong></center></h6>
      <table style="width: 100%;">
          <tr>
              <th>Employee ID</th>
              <th>Department</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Total Sales</th>
              
          </tr>
          <% report9.forEach(function(report9) { %>
          <tr>
              <td><%= report9.employee_id %></td>
              <td><%= report9.department_name %></td>
              <td><%= report9.first_name %></td> 
              <td><%= report9.last_name %></td> 
              <td><%= report9.total_sales %></td>
            
          </tr>
          
          <% }); %>
      </table>
  </div>
    
<br>
<ul>
    <a href="/reports"><button class="btn"><i class="fa fa-home"></i> Back</button></a>
</ul>
</main>


</body>
</body>
</html>